<h1><%= @notification.subject %></h1>
 
<p>
  <%= @notification.message %>
</p>


<%if @notification.status != "Paid" && @notification.status != "Rejected" %>
  <p>
  <%= button_to "Pay for Customized Item", add_to_cart_path(zord_id: @notification.zord.id, notification_id: @notification.id), method: :post, class: "btn btn-success" %>
  </p>
  <%elsif @notification.status == "Rejected"%>
  <p>Sorry, unfortunately your request has been rejected!</p>
  <% else %>
  <p>This item has already been added to the cart.</p>
<%end%>