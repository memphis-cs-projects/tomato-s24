<!-- app/views/resales/new.html.erb -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center">Create Resale Request</h1>

          <%= form_with(model: @resale, url: create_resale_path, method: :post) do |f| %>
            <%= f.hidden_field :zord_id, value: @zord.id %>
            <%= f.hidden_field :user_id, value: current_user.id %>

            <div class="form-group">
              <%= f.label :new_price, class: "font-weight-bold" %>
              <%= f.number_field :new_price, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :condition, class: "font-weight-bold" %>
              <%= f.text_field :condition, class: "form-control" %>
            </div>

            <div class="text-center">
              <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
